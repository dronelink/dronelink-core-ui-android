<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/cameraFeedWidgetContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/statusGradientWidgetContainer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/statusLabelWidgetContainer"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/flightModeWidgetContainer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/batteryWidgetContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/statusGradientWidgetContainer"
        app:layout_constraintBottom_toBottomOf="@id/statusGradientWidgetContainer"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/downlinkWidgetContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/statusGradientWidgetContainer"
        app:layout_constraintBottom_toBottomOf="@id/statusGradientWidgetContainer"
        app:layout_constraintEnd_toStartOf="@id/batteryWidgetContainer"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/uplinkWidgetContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/statusGradientWidgetContainer"
        app:layout_constraintBottom_toBottomOf="@id/statusGradientWidgetContainer"
        app:layout_constraintEnd_toStartOf="@id/downlinkWidgetContainer"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/gpsSignalWidgetContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/statusGradientWidgetContainer"
        app:layout_constraintBottom_toBottomOf="@id/statusGradientWidgetContainer"
        app:layout_constraintEnd_toStartOf="@id/uplinkWidgetContainer"/>


</androidx.constraintlayout.widget.ConstraintLayout>